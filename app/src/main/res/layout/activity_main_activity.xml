<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.coutinho.brian.areacircumferenceofacircle.main_activity">

    <TextView
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:text="@string/output"
        android:id="@+id/area_result"
        android:textSize="20sp"
        android:layout_marginBottom="131dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/button_area"
        android:text="@string/area"
        android:layout_above="@+id/button_circumference"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="36dp" />
    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="@string/circumference"
        android:id="@+id/button_circumference"
        android:layout_above="@+id/area_result"
        android:layout_alignLeft="@+id/button_area"
        android:layout_alignStart="@+id/button_area"
        android:layout_marginBottom="91dp" />
    <EditText
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/enter_radius"
        android:id="@+id/input_radius"
        android:inputType="numberDecimal"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="39dp" />

</RelativeLayout>
